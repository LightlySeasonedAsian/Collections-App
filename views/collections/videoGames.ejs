<% layout('layouts/boilerplate') %>
<h1>Your Video Games</h1>
    <div>
        <a href="/">Home</a>
    </div>
        <% for (let release of videoGames){ %>
         <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=release.image%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= release.title %></h5>
                        <p class="card-text"><%= release.description%></p>
                        <p class="card-text">
                            <small class="text-muted"><%=release.author%></small>
                        </p>
                        <a class="btn btn-primary" href="/video-games/<%=release._id%>">View <%=release.title%></a>

                    </div>
                </div>
            </div>
        </div>  
         <% } %>  
