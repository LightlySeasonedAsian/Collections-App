<% layout('layouts/boilerplate') %>
<h1>Your Manga</h1>
    <div>
        <a href="/">Home</a>
    </div>
        <% for (let manga of series){ %>
         <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=manga.image%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= manga.title %></h5>
                        <p class="card-text"><%= manga.description%></p>
                        <p class="card-text">
                            <small class="text-muted"><%=manga.author%></small>
                        </p>
                        <a class="btn btn-primary" href="/manga/<%=manga._id%>">View <%=manga.title%></a>

                    </div>
                </div>
            </div>
        </div>  
         <% } %>  
