<% layout('layouts/boilerplate') %>
<h1>Your Movies</h1>
    <div>
        <a href="/">Home</a>
    </div>
        <% for (let element of movies){ %>
         <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=element.image%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= element.title %></h5>
                        <p class="card-text"><%= element.description%></p>
                        <p class="card-text">
                            <small class="text-muted"><%=element.author%></small>
                        </p>
                        <a class="btn btn-primary" href="/movies/<%=element._id%>">View <%=element.title%></a>

                    </div>
                </div>
            </div>
        </div>  
         <% } %>  
